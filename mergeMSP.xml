<tool id="mergeMSP" name="merge spectra" version="0.1.0" python_template_version="3.5">
    <description>Merge MSP spectra in a single file</description>
    <requirements>
         <requirement type="package" version="0.14.0">matchms</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python3  $__tool_directory__/mergeMSP.py  --filenames $input --outfilename   '$output'
    ]]></command>
    <inputs>
        <param name="$input" type="data" format="msp" multiple="true"/>
    </inputs>
    <outputs>
        <param name="output" type="data" format="msp" />
    </outputs>
    <tests>
         <test>
            <param name="msp" format="msp"  />
            <output name="outfilename" value="sample_output.msp"/>
        </test>
    </tests> 
    <help><![CDATA[
        All good
    ]]></help>
</tool>